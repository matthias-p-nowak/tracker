        {
            "name": "Launch Built-in web server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "0.0.0.0:3333"
            ],
            "program": "",
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://0.0.0.0:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s/public/index.html",
                "action": "openExternally"
            }
        }
    ]
}  